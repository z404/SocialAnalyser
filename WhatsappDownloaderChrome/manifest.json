{
    "update_url": "https://clients2.google.com/service/update2/crx",


    "manifest_version": 2,

    "name": "Backup WhatsApp Chats",
    "description": "Downloads a backup of your WhatsApp chats",
    "version": "2.1.0.0",

    "content_security_policy": "script-src 'self' https://momentjs.com/downloads/moment-with-locales.min.js https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js; object-src 'self'",
    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": ["https://web.whatsapp.com/*"],
        "js": [
            "js/patch-worker.js",
            "js/cs.js",
            "js/FileSaver.js",
            "js/injectedWA.js"
        ],
        "css": ["css/spinkit.css"]

    }],

    "permissions": [
        "storage",
        "https://web.whatsapp.com/",
        "https://www.googleapis.com/",
        "identity",
        "https://chatsaver.org/"
    ],

    "web_accessible_resources": [
        "js/lodash.js",
        "js/z-worker.js",
        "js/patch-worker.js",
        "js/injectedWA.js",
        "js/FileSaver.js",
        "css/spinkit.css",
        "css/wa_layout.css",
        "imgs/*"
    ],

    "externally_connectable": {
        "matches": ["*://*.whatsapp.com/*", "*://*.whatsapp.net/*"]
    },
    "icons": {
        "128": "imgs/icon3.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }

}